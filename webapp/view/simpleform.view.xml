                <c:Title text="Details1"></c:Title>
                    <Label text="empid" />
                    <Input />
                    <Label text="empnm" />
                    <Input />
                    <Label text="empdes" />
                    <Input />
                <c:Title text="Details2"></c:Title>
                    <Label text="empskil" />
                    <Input />
                <c:Title text="Details3"></c:Title>
                    <Label text="empphno" />
                    <Input />
                    <Label text="empemailid" />
                    <Input />
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button
                        text="Hello button1"
                        press="clickb1"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
